<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="product"
                type="com.mobilabsolutions.payment.sample.data.entities.Product"/>

        <variable
                name="clickListener"
                type="android.view.View.OnClickListener" />

    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="5dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="81dp"
                    android:layout_height="88dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/image_card_05"
                    android:contentDescription="@string/image_description"
                    app:image="@{product.image}"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/image"
                    android:text="@{product.name, default=@string/item_title}"
                    android:textColor="@color/colorDark"
                    android:textSize="22sp"
                    tools:ignore="RelativeOverlap"/>

            <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_toEndOf="@+id/image"
                    android:maxLines="2"
                    android:text="@{product.description, default=@string/item_description}"
                    android:textColor="@color/colorCoolGray"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/image"
                    android:text="@string/price_placeholder"
                    app:currency="@{product.price}"
                    android:textColor="@color/colorAquaMarine"
                    android:textSize="22sp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/ripple_circle_grey"
                    android:tint="@color/colorAquaMarine"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image_description"
                    android:padding="8dp"
                    android:onClick="@{clickListener}"
                    android:layout_marginEnd="28dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>