<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="com.mobilabsolutions.stash.core.ui.creditcard.CreditCardEntryViewState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/cc_toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/toolbar_blue"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?actionBarItemBackground"
                android:padding="16dp"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:text="@string/payment_chooser_title_text"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/flip_view"
            android:layout_width="268dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            app:flipDuration="700"
            app:flipType="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cc_toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/back_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/toolbar_blue"
                app:cardCornerRadius="14dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.2"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="80dp"
                    android:alpha="0.55"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="CVV/CVC"
                    android:textColor="@color/gable_green"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/front_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/toolbar_blue"
                app:cardCornerRadius="14dp"
                tools:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/ic_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/card_ic"
                        android:layout_width="42dp"
                        android:layout_height="28dp"
                        android:background="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_chip" />

                    <TextView
                        android:id="@+id/card_number_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/lato_bold"
                        android:text="@{state.cardNumber}"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/ic_chip" />

                    <LinearLayout
                        android:id="@+id/name_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/ext_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_number_text">

                        <TextView
                            android:id="@+id/label_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="CARD HOLDER NAME"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:alpha="0.5"
                            android:text="@{state.name}"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ext_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBaseline_toBaselineOf="@+id/name_layout"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/label_exp_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="Expiration Date"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/exp_date_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:alpha="0.5"
                            android:text="@{state.expDate}"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            tools:ignore="SmallSp" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </com.wajahatkarim3.easyflipview.EasyFlipView>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="120dp"
            android:paddingEnd="120dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_next"
            app:layout_constraintTop_toBottomOf="@+id/flip_view"
            tools:background="@color/toolbar_blue" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/white_blue"
            android:fontFamily="@font/lato_regular"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/light_blue"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_next"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_next_button"
            android:fontFamily="@font/lato_regular"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_next_button"
            android:fontFamily="@font/lato_regular"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>